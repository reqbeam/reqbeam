{
  "name": "reqbeam",
  "displayName": "ReqBeam",
  "description": "Thunder Clientâ€“style HTTP client for VS Code, powered by sqlite3.",
  "version": "0.0.4",
  "publisher": "reqbeam",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:reqbeam.newRequest",
    "onCommand:reqbeam.sendRequest",
    "onCommand:reqbeam.showCollections",
    "onCommand:reqbeam.showEnvironments",
    "onCommand:reqbeam.showHistory",
    "onCommand:reqbeam.auth.login",
    "onCommand:reqbeam.auth.logout",
    "onUri",
    "onView:reqbeam.collectionsView",
    "onView:reqbeam.environmentsView",
    "onView:reqbeam.historyView"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "reqbeam.environmentVariableEditor",
        "displayName": "Environment Variables",
        "selector": [
          {
            "filenamePattern": "*.reqbeam-env"
          }
        ],
        "priority": "default"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "reqbeam",
          "title": "ReqBeam",
          "icon": "media/reqbeam-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "reqbeam.newRequest",
        "title": "ReqBeam: New Request"
      },
      {
        "command": "reqbeam.loadRequest",
        "title": "ReqBeam: Load Request"
      },
      {
        "command": "reqbeam.setEnvironment",
        "title": "ReqBeam: Set Active Environment"
      },
      {
        "command": "reqbeam.showHistoryItem",
        "title": "ReqBeam: Show History Item"
      },
      {
        "command": "reqbeam.sendRequest",
        "title": "ReqBeam: Send Request"
      },
      {
        "command": "reqbeam.showCollections",
        "title": "ReqBeam: Show Collections"
      },
      {
        "command": "reqbeam.showEnvironments",
        "title": "ReqBeam: Show Environments"
      },
      {
        "command": "reqbeam.showHistory",
        "title": "ReqBeam: Show History"
      },
      {
        "command": "reqbeam.addEnvironment",
        "title": "ReqBeam: Add Environment"
      },
      {
        "command": "reqbeam.renameEnvironment",
        "title": "ReqBeam: Rename Environment"
      },
      {
        "command": "reqbeam.deleteEnvironment",
        "title": "ReqBeam: Delete Environment"
      },
      {
        "command": "reqbeam.duplicateEnvironment",
        "title": "ReqBeam: Duplicate Environment"
      },
      {
        "command": "reqbeam.editEnvironment",
        "title": "ReqBeam: Edit Environment"
      },
      {
        "command": "reqbeam.createWorkspace",
        "title": "Create Workspace",
        "icon": "$(add)"
      },
      {
        "command": "reqbeam.setWorkspace",
        "title": "ReqBeam: Set Active Workspace"
      },
      {
        "command": "reqbeam.createCollection",
        "title": "Create Collection",
        "icon": "$(add)"
      },
      {
        "command": "reqbeam.createRequest",
        "title": "New Request",
        "icon": "$(add)"
      },
      {
        "command": "reqbeam.renameRequest",
        "title": "Rename Request"
      },
      {
        "command": "reqbeam.editRequest",
        "title": "Edit Request"
      },
      {
        "command": "reqbeam.deleteRequest",
        "title": "Delete Request"
      },
      {
        "command": "reqbeam.showRequestMenu",
        "title": "More Actions...",
        "icon": "$(more)"
      },
      {
        "command": "reqbeam.renameCollection",
        "title": "Rename Collection"
      },
      {
        "command": "reqbeam.deleteCollection",
        "title": "Delete Collection"
      },
      {
        "command": "reqbeam.showCollectionMenu",
        "title": "More Actions...",
        "icon": "$(more)"
      },
      {
        "command": "reqbeam.renameWorkspace",
        "title": "Rename Workspace"
      },
      {
        "command": "reqbeam.deleteWorkspace",
        "title": "Delete Workspace"
      },
      {
        "command": "reqbeam.showWorkspaceMenu",
        "title": "More Actions...",
        "icon": "$(more)"
      },
      {
        "command": "reqbeam.openEnvironmentEditor",
        "title": "Edit Environment Variables"
      },
      {
        "command": "reqbeam.addEnvironmentVariable",
        "title": "Add Variable"
      },
      {
        "command": "reqbeam.showEnvironmentMenu",
        "title": "More Actions...",
        "icon": "$(more)"
      },
      {
        "command": "reqbeam.collections.import",
        "title": "ReqBeam: Import Collection",
        "icon": "$(import)"
      },
      {
        "command": "reqbeam.collections.export",
        "title": "ReqBeam: Export Collection",
        "icon": "$(export)"
      },
      {
        "command": "reqbeam.collections.importSwagger",
        "title": "ReqBeam: Import Swagger/OpenAPI",
        "icon": "$(file-code)"
      },
      {
        "command": "reqbeam.auth.login",
        "title": "ReqBeam: Login"
      },
      {
        "command": "reqbeam.auth.logout",
        "title": "ReqBeam: Logout"
      },
      {
        "command": "reqbeam.auth.statusUpdate",
        "title": "ReqBeam: Update Auth Status"
      }
    ],
    "uriHandlers": [
      {
        "scheme": "reqbeam"
      }
    ],
    "configuration": {
      "title": "ReqBeam",
      "properties": {
        "reqbeam.authServerUrl": {
          "type": "string",
          "default": "https://api.reqbeam.dev",
          "description": "URL of the authentication server",
          "markdownDescription": "URL of the authentication server. Defaults to `https://api.reqbeam.dev`. Change this if your auth server is running on a different URL."
        }
      }
    },
    "views": {
      "reqbeam": [
        {
          "id": "reqbeam.workspacesView",
          "name": "Workspaces"
        },
        {
          "id": "reqbeam.collectionsView",
          "name": "Collections"
        },
        {
          "id": "reqbeam.environmentsView",
          "name": "Environments"
        },
        {
          "id": "reqbeam.historyView",
          "name": "History"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "reqbeam.createWorkspace",
          "when": "view == reqbeam.workspacesView",
          "group": "navigation",
          "icon": "$(add)"
        },
        {
          "command": "reqbeam.newRequest",
          "when": "view == reqbeam.collectionsView",
          "group": "navigation",
          "icon": "$(add)"
        },
        {
          "command": "reqbeam.createCollection",
          "when": "view == reqbeam.collectionsView",
          "group": "navigation",
          "icon": "$(folder)"
        },
        {
          "command": "reqbeam.collections.import",
          "when": "view == reqbeam.collectionsView",
          "group": "navigation",
          "icon": "$(import)",
          "title": "Import Collection"
        },
        {
          "command": "reqbeam.collections.export",
          "when": "view == reqbeam.collectionsView",
          "group": "navigation",
          "icon": "$(export)",
          "title": "Export Collection"
        },
        {
          "command": "reqbeam.collections.importSwagger",
          "when": "view == reqbeam.collectionsView",
          "group": "navigation",
          "icon": "$(file-code)",
          "title": "Import Swagger/OpenAPI"
        },
        {
          "command": "reqbeam.addEnvironment",
          "when": "view == reqbeam.environmentsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "reqbeam.createCollection",
          "when": "view == reqbeam.collectionsView && viewItem == workspace",
          "group": "inline"
        },
        {
          "command": "reqbeam.createRequest",
          "when": "view == reqbeam.collectionsView && viewItem == workspace",
          "group": "inline"
        },
        {
          "command": "reqbeam.createRequest",
          "when": "view == reqbeam.collectionsView && viewItem == collection",
          "group": "inline"
        },
        {
          "command": "reqbeam.showEnvironmentMenu",
          "when": "view == reqbeam.environmentsView && viewItem == environment",
          "group": "inline",
          "icon": "$(more)"
        },
        {
          "command": "reqbeam.showEnvironmentMenu",
          "when": "view == reqbeam.environmentsView && viewItem == environment-active",
          "group": "inline",
          "icon": "$(more)"
        },
        {
          "command": "reqbeam.showRequestMenu",
          "when": "view == reqbeam.collectionsView && viewItem == request",
          "group": "inline",
          "icon": "$(more)"
        },
        {
          "command": "reqbeam.showCollectionMenu",
          "when": "view == reqbeam.collectionsView && viewItem == collection",
          "group": "inline",
          "icon": "$(more)"
        },
        {
          "command": "reqbeam.collections.export",
          "when": "view == reqbeam.collectionsView && viewItem == collection",
          "group": "inline"
        },
        {
          "command": "reqbeam.showWorkspaceMenu",
          "when": "view == reqbeam.collectionsView && viewItem == workspace",
          "group": "inline",
          "icon": "$(more)"
        },
        {
          "command": "reqbeam.showWorkspaceMenu",
          "when": "view == reqbeam.workspacesView && viewItem == workspace",
          "group": "inline",
          "icon": "$(more)"
        }
      ]
    }
  },
  "scripts": {
    "build:extension": "esbuild src/extension/activate.ts --bundle --platform=node --external:vscode --external:sqlite3 --external:sqlite --external:bindings --external:js-yaml --outfile=dist/extension.js --format=cjs --sourcemap",
    "build:webview": "esbuild src/webview/index.tsx --bundle --platform=browser --outfile=dist/webview.js --loader:.tsx=tsx --loader:.ts=ts --sourcemap",
    "build:env-editor": "esbuild src/webview/environmentEditor.tsx --bundle --platform=browser --outfile=dist/environmentEditor.js --loader:.tsx=tsx --loader:.ts=ts --sourcemap",
    "build": "npm run build:extension && npm run build:webview && npm run build:env-editor",
    "watch:extension": "esbuild src/extension/activate.ts --bundle --platform=node --external:vscode --external:sqlite3 --external:sqlite --external:bindings --outfile=dist/extension.js --format=cjs --sourcemap --watch",
    "watch:webview": "esbuild src/webview/index.tsx --bundle --platform=browser --outfile=dist/webview.js --loader:.tsx=tsx --loader:.ts=ts --sourcemap --watch",
    "watch:env-editor": "esbuild src/webview/environmentEditor.tsx --bundle --platform=browser --outfile=dist/environmentEditor.js --loader:.tsx=tsx --loader:.ts=ts --sourcemap --watch",
    "watch": "npm-run-all --parallel watch:extension watch:webview watch:env-editor",
    "package": "npm run build && vsce package"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/vscode": "^1.106.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/uuid": "^10.0.0",
    "cuid": "^3.0.0",
    "js-yaml": "^4.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0"
  }
}
