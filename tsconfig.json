{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "outDir": "out",
    "sourceMap": true,
    "types": ["node", "vscode"]
  },
  "include": ["src"]
}


