{
  "name": "api-nexus-cli",
  "version": "1.0.0",
  "description": "A lightweight Postman CLI alternative for running API requests and tests",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "apicli": "./bin/apicli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepublish": "npm run build",
    "test": "node dist/index.js test examples/test-collection.json"
  },
  "keywords": [
    "api",
    "cli",
    "postman",
    "newman",
    "testing",
    "http",
    "rest"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

