{
  "name": "postmind-cli",
  "version": "1.0.0",
  "description": "A TypeScript-based CLI tool for managing API projects, environments, requests, and collections",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "postmind": "./bin/postmind.js",
    "pm": "./bin/pm.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepublish": "npm run build",
    "test": "node dist/index.js --help"
  },
  "keywords": [
    "api",
    "cli",
    "postman",
    "newman",
    "testing",
    "http",
    "rest",
    "collections",
    "environments"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@postmind/db": "file:../postmind-db",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "csv-writer": "^1.6.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "node-cron": "^3.0.3",
    "open": "^10.2.0",
    "ora": "^8.0.1",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
