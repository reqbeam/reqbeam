# Database
# Option 1: Use PostgreSQL (default)
DATABASE_URL="postgresql://username:password@localhost:5432/reqbeam?schema=public"

# Option 2: Use VS Code Extension Database (SQLite)
# Set USE_VSCODE_EXTENSION_DB=true to automatically use the VS Code extension database
# The database will be located at:
#   Windows: %APPDATA%\Code\User\globalStorage\reqbeam.reqbeam\reqbeam.db
#   macOS: ~/Library/Application Support/Code/User/globalStorage/reqbeam.reqbeam/reqbeam.db
#   Linux: ~/.config/Code/User/globalStorage/reqbeam.reqbeam/reqbeam.db
USE_VSCODE_EXTENSION_DB=true
VSCODE_EXTENSION_ID="reqbeam.reqbeam"
VSCODE_DB_FILE_NAME="reqbeam.db"

# Option 3: Manually set DATABASE_URL to VS Code extension database path
# Uncomment and set the path based on your platform:
# Windows example:
# DATABASE_URL="file:C:/Users/YourUsername/AppData/Roaming/Code/User/globalStorage/reqbeam.reqbeam/reqbeam.db"
# macOS example:
# DATABASE_URL="file:/Users/YourUsername/Library/Application Support/Code/User/globalStorage/reqbeam.reqbeam/reqbeam.db"
# Linux example:
# DATABASE_URL="file:/home/YourUsername/.config/Code/User/globalStorage/reqbeam.reqbeam/reqbeam.db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# App Configuration
NEXT_PUBLIC_APP_NAME="OSS"

# Auth Server
AUTH_SERVER_URL="http://localhost:4000"
MAIN_APP_URL="http://localhost:3000"

# Google OAuth (PKCE with Desktop App)
# IMPORTANT: Even Desktop app clients require a client_secret (it's public, not secret)
# 1. Create a "Desktop app" OAuth client in Google Cloud Console
# 2. Copy both the Client ID and Client secret
# 3. The client_secret for Desktop apps is meant to be embedded (it's public)
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your-desktop-app-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-desktop-app-client-secret"
NEXT_PUBLIC_REDIRECT_URI="http://localhost:3000/auth/callback"

